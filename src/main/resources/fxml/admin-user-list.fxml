<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.edu.controller.AdminUserController"
      spacing="20" style="-fx-padding: 25; -fx-background-color: #f8f9fa;">

    <!-- NÚT QUAY LẠI + TIÊU ĐỀ + NÚT THÊM + LÀM MỚI -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Button text="Quay lại" onAction="#backToDashboard"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Label text="QUẢN LÝ NGƯỜI DÙNG" 
               style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Button text="Thêm người dùng" onAction="#openAddUser"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 16px;"/>
        <Button text="Làm mới" onAction="#refreshTable"
                style="-fx-background-color: #007bff; -fx-text-fill: white;"/>
    </HBox>

    <TableView fx:id="userTable" prefHeight="700">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colUsername" text="Tên đăng nhập" prefWidth="180"/>
            <TableColumn fx:id="colFullName" text="Họ tên" prefWidth="220"/>
            <TableColumn fx:id="colRole" text="Vai trò" prefWidth="120"/>
            <TableColumn fx:id="colStatus" text="Trạng thái" prefWidth="120"/>
            <TableColumn fx:id="colAction" text="Hành động" prefWidth="420"/>
        </columns>
    </TableView>
</VBox>