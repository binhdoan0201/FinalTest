<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ucop.edu.controller.PromotionFormController"
      spacing="10" style="-fx-padding: 14;">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="⬅ Quay lại Dashboard" onAction="#backToDashboard"
                style="-fx-background-color:#64748b; -fx-text-fill:white; -fx-font-weight:bold;"/>
        <Label fx:id="titleLabel" text="Form khuyến mãi"
               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    </HBox>

    <GridPane hgap="10" vgap="10">
        <padding>
            <Insets top="6" right="6" bottom="6" left="6"/>
        </padding>

        <Label text="Mã khuyến mãi:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="codeField" promptText="Ví dụ: SALE10" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Tên khuyến mãi:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="Ví dụ: Giảm 10% toàn bộ đơn" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Loại giảm giá:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <ComboBox fx:id="discountTypeBox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Giá trị giảm:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="discountValueField" promptText="Ví dụ: 10 (10%) hoặc 100000 (giảm 100k)"
                   GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Số lượt tối đa:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="maxUsageField" promptText="Bỏ trống = không giới hạn"
                   GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Ngày bắt đầu:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <DatePicker fx:id="validFromPicker" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

        <Label text="Ngày kết thúc:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
        <DatePicker fx:id="validToPicker" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

        <Label text="Áp dụng cho toàn đơn:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
        <CheckBox fx:id="applyToAllCheck" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

        <Label text="Course ID (nếu chỉ áp dụng 1 khóa):" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
        <TextField fx:id="courseIdField" promptText="Bắt buộc nếu không áp dụng toàn đơn"
                   GridPane.rowIndex="8" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="Lưu" onAction="#onSave"/>
        <Button text="Hủy" onAction="#onCancel"/>
    </HBox>

</VBox>
