<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.edu.controller.LoginController"
      alignment="CENTER" spacing="20" style="-fx-background-color: #f4f4f4;">

    <Label text="UCOP EDUCATION" style="-fx-font-size: 30px; -fx-font-weight: bold;"/>
    <TextField fx:id="usernameField" promptText="Tên đăng nhập"/>
    <PasswordField fx:id="passwordField" promptText="Mật khẩu"/>
    <Button text="Đăng nhập" onAction="#handleLogin"/>
    <Label fx:id="errorLabel" style="-fx-text-fill: red;"/>
</VBox>