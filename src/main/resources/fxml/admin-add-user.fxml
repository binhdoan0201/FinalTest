<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.edu.controller.AdminUserFormController"
      spacing="20" style="-fx-padding: 30; -fx-background-color: white;">

    <Label fx:id="lblTitle" text="THÊM NGƯỜI DÙNG" 
           style="-fx-font-size: 28px; -fx-font-weight: bold;"/>

    <GridPane hgap="15" vgap="15">
        <Label text="Tên đăng nhập:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtUsername" prefWidth="300" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Mật khẩu:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtPassword" promptText="Để trống nếu không đổi" 
                       prefWidth="300" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Họ tên:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtFullName" prefWidth="300" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Vai trò:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbRole" prefWidth="300" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="20" alignment="CENTER_RIGHT">
        <Button fx:id="btnSave" text="Lưu" onAction="#saveUser"
                style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
        <Button text="Hủy" onAction="#cancel"
                style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
    </HBox>
</VBox>