<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.ucop.edu.controller.AdminUserController"
      spacing="15" style="-fx-padding: 30; -fx-background-color: white;">

    <Label text="THÊM NGƯỜI DÙNG MỚI" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Mật khẩu:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField fx:id="txtPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Họ tên:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtFullName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Vai trò:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbRole" GridPane.rowIndex="3" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="ADMIN"/>
                    <String fx:value="STAFF"/>
                    <String fx:value="STUDENT"/>
                </FXCollections>
            </items>
        </ComboBox>
    </GridPane>

    <HBox spacing="10">
        <Button text="Lưu" onAction="#saveUser" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
        <Button text="Hủy" onAction="#cancel"/>
    </HBox>
</VBox>