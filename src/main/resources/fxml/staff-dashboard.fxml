<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ucop.edu.controller.StaffDashboardController"
            style="-fx-background-color: #eef2f7;">

    <!-- Header -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT"
              style="-fx-background-color: white;
                     -fx-padding: 12 14;
                     -fx-border-color: #e5e7eb;
                     -fx-border-width: 0 0 1 0;">
            <Label text="STAFF DASHBOARD"
                   style="-fx-font-size: 18px; -fx-font-weight: 900; -fx-text-fill: #0f172a;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <!-- Bạn có thể thêm nút logout tổng ở đây nếu muốn -->
        </HBox>
    </top>

    <!-- Tabs -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE"
                 style="-fx-background-color: transparent;">
            <tabs>
                <Tab text="Duyệt đơn">
                    <content>
                        <!-- AnchorPane để include tự co giãn full -->
                        <AnchorPane>
                            <fx:include source="duyet_don_staff.fxml"
                                        AnchorPane.topAnchor="0.0"
                                        AnchorPane.rightAnchor="0.0"
                                        AnchorPane.bottomAnchor="0.0"
                                        AnchorPane.leftAnchor="0.0"/>
                        </AnchorPane>
                    </content>
                </Tab>

                <Tab text="Duyệt yêu cầu hoàn tiền">
                    <content>
                        <AnchorPane>
                            <fx:include source="duyet_refund_staff.fxml"
                                        AnchorPane.topAnchor="0.0"
                                        AnchorPane.rightAnchor="0.0"
                                        AnchorPane.bottomAnchor="0.0"
                                        AnchorPane.leftAnchor="0.0"/>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>

</BorderPane>
