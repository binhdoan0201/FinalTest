<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ucop.edu.controller.AdminDashboardController"
      spacing="30" alignment="CENTER" style="-fx-background-color: #f8f9fa; -fx-padding: 40;">

    <!-- ĐÃ THÊM fx:id="lblWelcome" -->
    <Label fx:id="lblWelcome" text="CHÀO MỪNG ADMIN!" 
           style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label text="UCOP - Universal Commerce &amp; Operations Platform"
           style="-fx-font-size: 20px; -fx-text-fill: #636e72;"/>

    <VBox spacing="20" alignment="CENTER">
        <HBox spacing="30" alignment="CENTER">
            <Button text="Quản lý người dùng"
                    onAction="#openUserManagement"
                    prefWidth="300" prefHeight="100"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Button text="Quản lý khóa học"
                    prefWidth="300" prefHeight="100"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <Button text="Báo cáo doanh thu"
                    prefWidth="300" prefHeight="100"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>

    <Button text="Đăng xuất"
            onAction="#logout"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 16px;"
            alignment="BOTTOM_RIGHT"/>
</VBox>